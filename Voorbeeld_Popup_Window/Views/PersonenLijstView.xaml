<UserControl x:Class="Voorbeeld_Popup_Window.Views.PersonenLijstView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Voorbeeld_Popup_Window.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
   
        <DataGrid Name="PersoonGrid" 
                  
                  ItemsSource="{Binding Personen}" 
                  SelectedItem="{Binding SelectedPersoon}"
                  IsSynchronizedWithCurrentItem="true"
                  CanUserAddRows="False"
                  HorizontalAlignment="Left" Height="270" Margin="5,10,0,0" VerticalAlignment="Top" Width="273"/>
   
</UserControl>
