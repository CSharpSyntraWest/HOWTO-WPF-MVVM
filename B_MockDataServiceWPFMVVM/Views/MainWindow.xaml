<Window x:Class="B_MockDataServiceWPFMVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:B_MockDataServiceWPFMVVM" xmlns:viewmodels="clr-namespace:B_MockDataServiceWPFMVVM.ViewModels" xmlns:views="clr-namespace:B_MockDataServiceWPFMVVM.Views"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="350" MinWidth="525">
    <Window.Resources>
        <viewmodels:MainViewModel x:Key="MainViewModel"/>
    </Window.Resources>
    <Grid  DataContext="{StaticResource MainViewModel}">
        <views:BierenView DataContext="{Binding BierenVM}"/>
    </Grid>
</Window>
